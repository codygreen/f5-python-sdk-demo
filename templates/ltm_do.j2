{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-declarative-onboarding/master/src/schema/latest/base.schema.json",
    "schemaVersion": "1.12.0",
    "class": "Device",
    "async": true,
    "label": "LTM declaration for declarative onboarding",
    "Common": {
        "class": "Tenant",
        "mySystem": {
            "class": "System",
            "hostname": "{{ data.hostname }}",
            "cliInactivityTimeout": 1200,
            "consoleInactivityTimeout": 1200,
            "autoPhonehome": false
        },
        "myDns": {
            "class": "DNS",
            "nameServers": [{% for nameServer in data.nameServers %}
                "{{ nameServer }}"{{ "," if not loop.last }}{% endfor %}
            ],
            "search": [{% for dnsSearch in data.dnsSearch %}
                "{{ dnsSearch }}"{{ "," if not loop.last }}{% endfor %}
            ]
        },
        "myNtp": {
            "class": "NTP",
            "servers": [{% for ntpServer in data.ntpServers %}
                "{{ ntpServer }}"{{ "," if not loop.last }}{% endfor %}
            ],
            "timezone": "{{ data.timezone }}"
        },
        "myProvisioning": {
            "class": "Provision",
            "ltm": "nominal"
        },
        "internal": {
            "class": "VLAN",
            "interfaces": [
                {
                    "name": "1.2"
                }
            ],
            "cmpHash": "dst-ip"
        },
        "internal-self": {
            "class": "SelfIp",
            "address": "{{ data.internalSIP }}",
            "vlan": "internal",
            "allowService": "default",
            "trafficGroup": "traffic-group-local-only"
        },
        "external": {
            "class": "VLAN",
            "interfaces": [
                {
                    "name": "1.1"
                }
            ]
        },
        "external-self": {
            "class": "SelfIp",
            "address": "{{ data.externalSIP }}",
            "vlan": "external",
            "allowService": "none",
            "trafficGroup": "traffic-group-local-only"
        },
        "default": {
            "class": "Route",
            "gw": "{{ data.defaultGateway }}",
            "network": "default",
            "mtu": 1500
        },
        "dbvars": {
        	"class": "DbVariables",
        	"ui.advisory.enabled": true,
        	"ui.advisory.color": "green",
        	"ui.advisory.text": "{{ data.bannerText }}"
        }
    }
}
